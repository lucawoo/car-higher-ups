.gowhere, .gowhere-dark {
  position: fixed;
}

.gowhere {
  width: 60%;
  top: 25%;
  left: 20%;
  background: #fbfbfb;
  z-index: 25;
  border-radius: 5rpx;
  padding: 30rpx 0;
  padding-bottom: 0px;
}

.gowhere-dark {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.7;
  z-index: 20;
}

.topacct {
  text-align: center;
  margin-top: 30rpx;
}

.topacct image {
  width: 202rpx;
  height: 221rpx;
}

.botm view {
  float: left;
  width: 50%;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  height: 80rpx;
  border-top: 1px solid #eee;
  box-sizing: border-box;
}

.botm view:last-child {
  color: #23a3e6;
}

.botm view:first-child {
  background: #fff;
  border-radius: 0 0 0 15rpx;
  border-right: 1px solid #eee;
}

.botm view:last-child {
  background: #fff;
  border-radius: 0 0 15rpx 0;
}

.close {
  position: absolute;
  top: 8rpx;
  right: 13rpx;
  font-size: 26rpx;
}

.close image {
  width: 25rpx;
  height: 25rpx;
}

.card {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}

.cont {
  position: fixed;
  left: 50%;
  top: 88rpx;
  width: 50%;
  height: auto;
  margin-left: -25%;
}

