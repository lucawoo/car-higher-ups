.main{
  border-top: 10px solid #F4F4F4;
  padding: 30rpx 7%;
}
textarea{
  border: 1px solid #e5e5e5;
  border-radius: 2px;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  height: 500rpx;
  font-size: 28rpx;
}
button{
  background: #00a0e8;
  color: #fff;
  position: fixed;
  bottom: 50rpx;
  left: 0px;
  width: 86%;
  margin-left: 7%;
}



/*upload*/
.upimg{
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top: 0px;
  left: 0px;
}
.upload .text{
  font-size: 20rpx;
  color: #919191;
}
.upload{
  margin-top: 30rpx;
  position: relative;
  width: 106rpx;
  height: 106rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px dashed #ccc;
}
.upload .zan-icon{
  font-size: 40rpx;
  color: #d6d6d6;
  margin-top: 15rpx;
}

.up-icon image{
  width: 38rpx;
  height: 32rpx;
  margin-top: 22rpx;
}


.submit-btn{
  font-size: 36rpx;
}