/* 头部 */
.header{
  font-size: 36rpx;
  padding: 20rpx 0 40rpx 7%;
  border-bottom: 5px solid #F4F4F4;
}
.toux{
  width: 120rpx;
  height: 120rpx;
}
.header image{
  border-radius: 50%;
}
.nickname{
  margin-left: 40rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
}
.nick-bottom{
  font-size: 20rpx;
  margin-top: 5rpx;
  color: #CACACA;
}
.nick-vip{
  width: 150rpx;
  text-align: center;
  height: 45rpx;
  border-radius: 50rpx;
  border: 1px solid #00A0E8;
  margin-top: 37rpx;
  color: #00A0E8;
  line-height: 45rpx;
  font-size: 24rpx;
}

/*浏览记录 */
.visited{
  border-bottom: 5px solid #F4F4F4;
}
.visited-top .zan-cell{
  padding: 12px 7%;
}
.visited-title{
  color: #54BBEE;
  font-size: 24rpx;
}
.message-banner {
  padding: 0px 7%;
  padding-bottom: 20rpx;
}
.visited-list{
  font-size: 24rpx;
  color: #929292;
  width: 48%;
  display: inline-block;
  margin-left: 4%;
  position: relative;
}
.visited-list:nth-child(1){
  margin-left: 0%;
}

.list-tit > view:nth-child(2) {
  color: #c2BFC0;
  font-size: 24rpx;
  margin-top: 10rpx;
}




/* 内容 */
.cont{
  overflow: hidden;
}
.cont .zan-cell{
  margin-top: 20rpx;
  padding: 12px 7%;
  overflow: hidden;
}
.cont .zan-cell .zan-icon{
  font-size: 30rpx;
  margin-right: 25rpx;
}
.my_nav_icon{
  width: 35rpx;
  margin-right: 23rpx;
}


.list-item{
  position: relative;
}


.list-border{
  height: 19rpx;
  width: 1px;
  background: #f5f5f5;
}

.list-cont{
  position: absolute;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  top: 115rpx;
  height: 72rpx;
  line-height: 42rpx;
  font-size: 20rpx;
  width: 100%; 
  padding: 0 10rpx;
  padding-top: 30rpx;
  background: linear-gradient(rgba(255,255,255,0),rgba(0,0,0,1));
  box-sizing: border-box;
  border-radius: 0 0 2px 2px;
}
.kind-icon image{
  width: 17rpx;
  height: 17rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}
.list-tit{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.list-tit view{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.cont .zan-cell .zan-cell__bd{
  margin-top: -8rpx;
}

.is-lecturer{
  display: inline-block;
  padding: 3rpx 8rpx;
  background: #c89b5a;
  color: #fff;
  font-size: 19rpx;
  margin-left: 15rpx;
  border-radius: 7rpx;
}