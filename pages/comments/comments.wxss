.comments{
  padding-bottom: 50rpx;
}
.comments-list{
  padding: 40rpx 0 40rpx 7%;
}
.list-left{
  border-bottom: 1px solid #eeeeee;
}
.comments-name{
  font-size: 26rpx;
  float: left;
}
.dcomment-starts{
  float: right;
  color: #ffc000;
}
.dcomment-starts text{
	margin-left: 5rpx;
	font-size: 24rpx;
}
.dcomment-starts .gray{
  color: #eee;
}
.comments-cont{
  font-size: 24rpx;
  margin-top: 30rpx;
}
.comments-date{
  font-size: 20rpx;
  color: #919191;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}

.reply-list{
  padding: 15rpx 0 20rpx 20rpx;
  background: #f9f9f9;
  font-size: 24rpx;
  color: #919191;
}
.reply{
  position: relative;
}
.reply .zan-icon{
  position: absolute;
  top: 15rpx;
  left: -40rpx;
  font-size: 24rpx;
  color: #02a0e9;
}
.reply-name{
  color: #02a0e9;
  margin-bottom: 10rpx;
}

/* 发表评论 */
.ipt{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 90rpx;
  background: #F6F6F6;
  padding: 10rpx 5px;
  box-sizing: border-box;
}
.ipt input{
  background: #fff;
  height: 70rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
}


.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0} 
.clearfloat{zoom:1} 