page {
  padding-bottom: 160rpx;
}

.dinformation-detail-header {
	padding: 0 40rpx;
}

.dheader-title {
	font-size: 40rpx;
	max-height: 110rpx;
	font-weight: 600;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
  padding-top: 20rpx;
}

.dheader-explain {
	display: flex;
	justify-content: space-between;
	font-size: 24rpx;
	color: #919191;
	align-items: center;
	padding: 80rpx 0 60rpx 0;
	border-bottom: 1px solid #eeeeee;
}

.dheader-explain text:nth-child(2) {
	margin-left: 50rpx;
}

.dheader-explain-right {
	width: 46rpx;
	height: 46rpx;
	background-color: rgba(102, 102, 102, 0.7);
	border-radius: 50%;
	color: #fff;
	text-align: center;
	line-height: 46rpx;
}

.dheader-explain-right .icon-shoucang {
	font-size: 28rpx;
}

.dpeople-avatar image{
	height: 242rpx;
	width: 100%;
	margin: 30rpx 0;
}

.dpeople-introduce {
	color: #666666;
	font-size: 28rpx;
  margin-top: 26rpx;
	margin-bottom: 50rpx;
  line-height: 1.8;
}

.dpeople-introduce image {
  max-width: 670rpx!important;
}

.dpeople-introduce video{
  width: 670rpx;
  height: 430rpx;
  object-fit: fill;
  margin-top: 10px;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 50rpx;
}


.dinformation-comment-header {
	padding: 40rpx 0;
	font-size: 24rpx;
	border-bottom: 1px solid #eee;
	margin-bottom: 10rpx;
}

.dinformation-comment-title {
	border-left: 3rpx solid #000;
	padding-left: 40rpx;
}

.dinformation-comment-lsit {
	margin-top: 30rpx;
}

.dcommenter-item-avatar {
  display: flex;
  align-items: center;
}

.dcommenter-item-avatar image{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin: 0 40rpx;
}

.dcommenter-item-info {
	display: flex;
	justify-content: space-between;
	align-items: center;
  width: 610rpx;
  
}

.dcommenter-name {
	color: #1e1e1e;
	font-size: 24rpx;
}

.dcomment-starts {
	color: #ffc000;
  margin: -10rpx 40rpx 0 0;
}

.dcomment-starts text {
	margin-left: 10rpx;
	font-size: 24rpx;
}

.dcomment-content-detail {
  width: 570rpx;
  padding-right: 40rpx;
  margin-left: 140rpx;
}

.dcomment-item-content {
	color: #6f6f6f;
	font-size: 30rpx;
	margin: 20rpx 0 20rpx;
  line-height: 1.8;
}

.dcomment-item-time {
	color: #b0b0b0;
	font-size: 20rpx;
	padding-bottom: 20rpx;
}

.dcomment-content-replay {
  display: flex;
  /* justify-content: space-between; */
}

.dcomment-replay-info {
  background-color: #f9f9f9;
  margin-right: 40rpx;
  padding: 20rpx;
  width: 100%;
}

.dcomment-content-replayer {
  color: #02a0e9;
  font-size: 24rpx;
  margin-top: -10rpx;
}

.dcomment-content-replay .icon-tubiao15 {
	margin: 0 40rpx;
	color: #02a0e9;
}

.dcomment-content-replay-text {
  font-size: 24rpx;
  color: #919191;
  margin-top: 10rpx;
}

.dline-half {
  height: 1px;
  width: 610rpx;
  background: #eee;
  margin: 25rpx 0 25rpx 140rpx;
}

.dlook-more {
	display: flex;
	justify-content: flex-end;
	padding-right: 40rpx;
	color: #00a0e8;
	font-size: 24rpx;
  margin-top: 35rpx;
}

.dlook-more .icon-previewright {
	font-size: 26rpx;
}

.dpublish-comment-wrap {
  position: fixed;
  width: 100%;
  bottom: 0;
  background: #f8f8f8;
  font-size: 24rpx;
  color: #b4b4b4;
}

.dpublish-comment {
  height: 100%;
  padding: 20rpx;
}

.dpublish-comment input {
  background: #fff;
  height: 70rpx;
  border: solid 1rpx #dcdcdc;
  border-radius: 4px;
  padding: 0 20rpx;
}


.first image {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 55;
}

.first .btn {
  width: 34%;
  height: 80rpx;
  opacity: 0;
  z-index: 60;
  position: fixed;
  bottom: 5%;
  left: 33%;
}