.feedmain{
  padding: 20rpx 7%;
  border-top: 20rpx solid #f4f4f4;
}
.feedmain input{
  width: 100%;
  height: 80rpx;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  font-size: 28rpx;
  padding-left: 26rpx;
  box-sizing: border-box;
  margin-top: 40rpx;
}
.txtph{
  color: #919191;
  font-size: 24rpx;
}
.feedmain textarea{
  width: 100%;
  height: 400rpx;
  border: 1px solid #e5e5e5;
  border-radius: 4px;
  margin-top: 30rpx;
  font-size: 24rpx;
  padding: 26rpx;
  box-sizing: border-box;
}
.areaph{
  color: #919191;
  font-size: 24rpx;
}
.feedmain button{
  background: #00a0e8;
  color: #fff;
  position: fixed;
  bottom: 50rpx;
  left: 0px;
  width: 86%;
  margin-left: 7%;
}

.up-icon image{
  width: 38rpx;
  height: 32rpx;
  margin-top: 22rpx;
}

/*upload*/
.upimg{
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top: 0px;
  left: 0px;
}
.upload .text{
  font-size: 20rpx;
  color: #919191;
}
.upload{
  margin-top: 30rpx;
  position: relative;
  width: 106rpx;
  height: 106rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1px dashed #ccc;
}
.upload .zan-icon{
  font-size: 40rpx;
  color: #d6d6d6;
  margin-top: 15rpx;
}


.submit-btn{
  font-size: 30rpx;
  border-radius: 4px;
}