/*tab*/
.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
  font-size: 28rpx;
}
.swiper-tab-list{
  font-size: 29rpx;
  display: inline-block;
  width: 50%;
}

.menu{
  width: 100%;
  color: #777777;
}
.menu-item{
  width: 33.333%;
  float: left;
  font-size: 28rpx;
  text-align: center;
}
.btm-line {
  width: 16rpx;
	height: 3rpx;
  margin: 10rpx auto 0;
}
.dtab-active-bottom {
  background: #00a0e8; 
}
.dtab-active-color {
  color: #00a0e8;
}

/*内容*/
.cont{
  padding: 0px 10%;
}

.cont-tit{
  margin-top: 55rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.cont-tit text:first-child{
  font-weight: bold;
  float: left;
}
.cont-tit .income{
  color: #00a0e8;
  float: right;
  font-size: 24rpx;
}

.detail-list{
  padding: 45rpx 0;
  border-bottom: 1px solid #eeeeee;
}
.detail-list .zan-icon{
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  margin-top: 15rpx;
}
.list-tit{
  font-size: 28rpx;
  float: left;
}
.list-income{
  font-size: 24rpx;
  color: #e01a1a;
  float: right;
}
.list-cont{
  font-size: 20rpx;
  color: #919191;
  margin-top: 5rpx;
}
.list-date{
  font-size: 22rpx;
  color: #b0b0b0;
  float: left;
  margin-top: 10rpx;
}
.list-buyer{
  font-size: 22rpx;
  color: #b0b0b0;
  float: right;
}


