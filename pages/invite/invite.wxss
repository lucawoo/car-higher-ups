/* cont */
.invite_bg{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}
.cont{
  position: fixed;
  top: 130rpx;
  left: 50%;
  width: 50%;
  margin-left: -25%;
  text-align: center;
}
.headimg{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.cont-name{
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.cont-tit{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.Qr_code{
  width: 340rpx;
  height: 340rpx;
  margin-top: 30rpx;
}

/* 底部 */
.menu{
  position: fixed;
  bottom: 0px;
  left: 0px;
  height: 197rpx;
  width: 100%;
  background: #fff;
  box-shadow: 0px 0px 21px 0px rgba(0, 0, 0, 0.22)
}
.menu-item{
  float: left;
  width: 162rpx;
  height: 163rpx;
  margin-left: 21rpx;
  margin-top: 17rpx;
}
.active-shadow{
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.27);
}
.whitecolor{
  color: #fff;
}


 .dark{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .6;
  z-index: 10;
}
.actionsheet{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 260rpx;
  background: #fff;
  z-index: 20;
}
.actionsheet view{
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  font-size: 30rpx;
}
.actionsheet button{
  height: 85rpx;
  line-height: 85rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fff;
  border-radius: 0px;
}
.actionsheet button::after{
  border: 0px;
}
.actionsheet view:first-child{
  border-bottom: 1rpx solid #EFEFF4;
}
.actionsheet view:last-child{
  border-top: 9rpx solid #EFEFF4;
} 

.img {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
}