/**/
.telbox{
  width: 65%;
  position: fixed;
  padding: 36rpx;
  top: 35%;
  left: 50%;
  margin-left: -30%;
  z-index: 20;
  background: #fff;
  box-sizing: border-box;
  border-radius: 2px;
}
.telbox input{
  border: 1px solid #ededed;
  font-size: 24rpx;
  margin-bottom: 25rpx;
  padding-left: 20rpx;
  height: 74rpx;
}
.authcode input{
  float: left;
  width: 45%;
}
.authcode button{
  font-size: 24rpx;
  color: #0087e4;
  width: 40%;
  float: right;
  border: 1px solid #0087e4;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background: #fff;
  border-radius: 4px;
}
.authcode button::after{
  border: 0px;
}
.save-btn button{
  width: 100%;
  background: #02a0e9;
  color: #fff;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 24rpx;
}
.dmodal-wrap-bg{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  z-index: 10;
  left: 0px;
  top: 0px;
}
.view_hide{ 
  display: none;
}



.geting{
  display: none;
}


.mesg-list{
  box-sizing: border-box;
  line-height:1.4rem;
  padding: 12px 50rpx;
  border-bottom: 1px solid #f3f3f3;
}
.item-left{
  float: left;
  width: 40%;
  font-size: 26rpx;
  color: #919191;
}
.item-right{
  float: right;
  width: 60%;
  font-size: 26rpx;
}
.head{
  line-height: 0px;
}
.head .item-left{
  line-height: 120rpx;
}
.head .item-right{
  text-align: right;
}