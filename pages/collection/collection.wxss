.collect-list{
  padding: 10rpx 7%;
  margin-bottom: 20rpx;
}
.collect-list .cover{
  float: left;
  width: 250rpx;
  height: 151rpx;
  border-radius: 4px;
  margin-right: 40rpx;
}
.coll-kind{
  color: #00a0e8;
  font-size: 18rpx;
  line-height: 18rpx;
  height: 18rpx;
}
.coll-kind image{
  width: 17rpx;
  height: 17rpx;
  float: left;
  margin-right: 10rpx;
}
.coll-tit{
  font-size: 28rpx;
  line-height: 50rpx;
  margin-top: 5rpx;
}
.coll-cont{
  font-size: 28rpx;
  color: #656565;
  margin-top: 5rpx;
}
.coll-about{
  font-size: 18rpx;
  color: #919191;
  margin-top: 10rpx;
}
.coll-price{
  font-size: 24rpx;
  color: #00a0e8;
  float: right;
}


.clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0} 
.clearfloat{zoom:1}