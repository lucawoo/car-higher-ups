.dark{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: .7;
}
.withdrawal{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 500rpx;
  height: 480rpx;
  background: #fff;
  margin-top: -240rpx;
  margin-left: -250rpx;
  box-sizing: border-box;
}
.drawal-tit{
  font-size: 33rpx;
  text-align: center;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 70rpx;
}
.drawal-ipt{
  position: relative;
}
.drawal-ipt input{
  width: 80%;
  height: 70rpx;
  border: 1px solid #b0b0b0;
  border-radius: 4px;
  text-align: center;
  margin-left: 10%;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: bold;
}
.mone-ipt{
  font-weight: normal;
  font-size: 22rpx;
  color: #b0b0b0;
  text-align: center;
}
.mon-icon{
  position: absolute;
  top: 0px;
  left: 15%;
  font-size: 24rpx;
  line-height: 70rpx;
}
.wenxin{
  font-size: 22rpx;
  text-align: center;
  color: #919191;
  margin-top: 18rpx;
}
.button{
  width: 80%;
  height: 70rpx;
  background: #00a0e8;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  margin-left: 10%;
  margin-top: 70rpx;
  font-size: 30rpx;
}

.bind{
  font-size: 22rpx;
  color: #999;
  margin-top: 20rpx;
}

.modal-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  top: 0;
  left: 0;
}

.blance-tip {
  position: absolute;
  width: 500rpx;
  height: 740rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background: #fff;
}

.close-modal {
  width: 80%;
  height: 74rpx;
  font-size: 28rpx;
  color: #fff;
  background: #00a0e8;
  line-height: 74rpx;
  margin: 40rpx auto;
  border-radius: 40rpx;
  text-align: center;
}

.blance-title {
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  
}

.blance-tip-text {
  font-size: 27rpx;
  padding: 0 40rpx;
  line-height: 1.6;
  color: #6f6f6f;
  margin-bottom: 60rpx;
  height: 410rpx;
  overflow-y: scroll;
}

.blance-tip-text view {
  text-indent: 1.5rem;
}