/*余额*/

.no-scollw {
  overflow:hidden;
  top:0px;
  left: 0px;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 0;
}

.balance{
  padding: 60rpx 7% 37rpx;
  border-bottom: 7px solid #f6f6f6;
}
.balance-tit{
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.money{
  margin-top: 20rpx;
}
.money-left{
  font-size: 36rpx;
  width: 65%;
  display: inline-block;
}
.money-left text{
  font-size: 72rpx;
}
.money-today{
  font-size: 24rpx;
  color: #424242;
  width: 33%;
  display: inline-block;
  text-align: center;
  border-left: 1px solid #e5e5e5;
}
.money-today text{
  color: #e01a1a;
  margin-left: 15rpx;
}

.btn{
  height: 74rpx;
  margin-top: 80rpx;
}
.btn button{
  width: 100%;
  background: #fff;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 30rpx;
}
.kedianji{
  border: 1px solid #00a0e8;
  color: #00a0e8;
}
.bodianji{
  border: 1px solid #DCDCDC;
  color: #BBBBBB;
}
.btn button:first-child{
  float: left;
}
/* .btn button:last-child{
  float: right;
} */
.btn button::after{
  border: 0;
}

/*内容*/
.cont{
  padding: 0px 7%;
}

.cont-tit{
  margin-top: 55rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.cont-tit text:first-child{
  font-weight: bold;
  float: left;
}
.cont-tit text:last-child{
  color: #00a0e8;
  float: right;
  font-size: 24rpx;
}

.detail-list{
  padding: 45rpx 0;
  border-bottom: 1px solid #eeeeee;
}

.list-tit{
  font-size: 28rpx;
  float: left;
}
.list-income{
  font-size: 24rpx;
  color: #e01a1a;
  float: right;
}
.list-cont{
  font-size: 20rpx;
  color: #919191;
}
.list-date{
  font-size: 22rpx;
  color: #b0b0b0;
  float: left;
}
.list-buyer{
  font-size: 22rpx;
  color: #b0b0b0;
  float: right;
}


