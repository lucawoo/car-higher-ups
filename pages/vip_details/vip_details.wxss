.vip{
  margin-top: 90rpx;
  margin-bottom: 120rpx;
}
.vip image{
  border-radius: 10px;
}


/*tab*/
.swiper-tab{
  width: 60%;
  margin-left: 20%;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
.swiper-tab-list{
  font-size: 29rpx;
  display: inline-block;
  width: 50%;
  color: #333;
}
.bre{
  border-radius: 50px 0 0 50px;
  background: #ededed;
}
.bae{
  border-radius: 0 50px 50px 0;
  background: #ededed;
}
.on{
  color: #fff;
  background: #e7bf6e;
}


