.dteacher-header-wrap {
  padding: 40rpx;
  font-size: 24rpx;
}

.dteacher-info {
  display: flex;
  justify-content: space-between;
}

.dteacher-info-left {
  width: 466rpx;
}

.dteacher-name {
  font-size: 40rpx;
  color: #000000;
  font-weight: bold;
}

.dteacher-tags {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding-bottom: 60rpx;
  /* border-bottom: dashed 1px #eeeeee; */
  text-align: center;

}

.dteacher-tags-items {
  display: flex;
  align-items: center;
}

.dteacher-tags-items .iconfont {
  color: #919191;
  font-size: 28rpx;
}

.dteacher-tag-text {
  color: #919191;
  font-size: 22rpx;
  padding: 0 10rpx;
}

.dteacher-tag-num {
  font-size: 30rpx;
}

.dteacher-info image {
  width: 120rpx;
	height: 120rpx;
  border-radius: 50%;
}

.dteacher-detail {
  margin: 30rpx 0 0rpx;
}

.dtext-color1 {
  font-size: 24rpx;
  color: #666666;
}

.dtext-color2 {
  color: #00a0e8;
  font-size: 24rpx;
}


.dteacher-home-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 60rpx 0 20rpx;
}

.dteacher-home-btns view {
  border: solid 1px #00a0e8;
  border-radius: 27rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  padding: 0 30rpx;
}

.dteacher-attention {
  color: #00a0e8;
}

.dteacher-ask {
  background-color: #00a0e8;
  color: #ffffff;
}


.dteacher-list-title {
  font-size: 30rpx;
  color: #000000;
  font-weight: bold;
  padding: 60rpx 40rpx 20rpx 40rpx; 

}

.dheader-fixed {
  position: fixed;
  z-index: 1000;
  background: #fff;
  width: 100%;
  left: 0;
  top: 0;
}

.dheader2 {
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dteacher2-home-btns {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dteacher2-home-btns view {
  border: solid 1px #00a0e8;
  border-radius: 27rpx;
  height: 54rpx;
  font-size: 24rpx;
  line-height: 54rpx;
  padding: 0 30rpx;
  margin-left: 30rpx;
}



/* 列表数据  */
.dclassify-detail-list {
  margin-top: 40rpx;
}

.dresult-list-item {
  display: flex;
  padding: 0 40rpx;
  margin-bottom: 70rpx;
}

.dresult-list-item image {
  width: 300rpx;
	height: 151rpx;
	border-radius: 4rpx;
  margin-right: 30rpx;
}

.dlist-item-detail {
  width: 486rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dlist-item-detail image {
  width: 17rpx;
  height: 17rpx;
  margin-right: 10rpx;
}

.dlist-item-class {
  font-size: 18rpx;
  color: #00a0e8;
  display: flex;
  align-items: center;
}

.dlist-item-class1 {
  font-size: 18rpx;
  color: #00a0e8;
  display: flex;
  align-items: center;
  line-height: 18rpx;
}

.dlist-item-class1 text {
  font-size: 20rpx;
  margin-right: 10rpx;
  line-height: 20rpx;
}

.dlist-item-title {
  color: #201f2a;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 12rpx;
  text-overflow: ellipsis;
}

.dlist-item-subtitle {
  color: #656565;
  font-size: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  margin-top: 12rpx;
  text-overflow: ellipsis;
}

.dlist-item-info {
  display: flex;
  justify-content: space-between;
  font-size: 18rpx;
  color: #919191;
  margin-top: 24rpx;
}

.dlist-item-info text:nth-child(2) {
  color: #00a0e8;
  font-size: 24rpx;
}

.dlist-item-info .icon-book {
  font-size: 24rpx;
  margin-right: 10rpx;
}


.first image{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 55;
}
.first .btn{
  width: 34%;
  height: 80rpx;
  opacity: 0;
  z-index: 60;
  position: fixed;
  bottom: 5%;
  left: 33%;
}